<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="45dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.nectar.thesun.library.MyTextView
                android:id="@+id/newsheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="This is a test news Item, if you&apos;re reading this its a bug, please send us a message regarding it."
                android:textColor="@color/headerstextcolor"
                android:textSize="25sp" />

            <com.nectar.thesun.library.MyTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="SEPT. 12, 2014"
                android:textColor="@color/bodytextcolor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageViewslider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imgload" />

            <com.nectar.thesun.library.MyTextView
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="MyTextView"
                android:textSize="23sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomread"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-70dp"
        android:background="@color/buttoncolor"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp" >

        <com.nectar.thesun.library.MyTextView
            android:id="@+id/myTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <com.nectar.thesun.library.MyTextView
            android:id="@+id/myTextViewnextread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="MyTextView"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/home/victor/AndroidstudioProjects/UdacitySunNewsApp/udacitySunNewsApp/src/main/res/layout-xlarge/read.xml -->